{
  "extends": ["tslint-config-prettier", "tslint:latest"],
  "linterOptions": {
    "exclude": ["**/*.js?(x)"]
  },
  "rules": {
    "no-implicit-dependencies": [
      true,
      "dev",
      ["@kaizen", "@storybook", "@testing-library", "react", "react-dom"]
    ],
    "ordered-imports": true,
    "semicolon": false,
    "no-submodule-imports": false,
    "no-var-requires": false
  }
}
